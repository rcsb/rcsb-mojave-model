{
  "type": "object",
  "required" : [ "id", "name" ],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique node identifier."
    },
    "name": {
      "type": "string",
      "description": "Human-readable term associated with the node."
    },
    "description": {
      "type": "string",
      "description": "Node description."
    },
    "depth": {
      "type" : "integer",
      "description" : "Hierarchy depth."
    },
    "parents": {
      "type" : "array",
      "minItems" : 1,
      "uniqueItems" : true,
      "items" : {
        "type": "string"
      },
      "description": "ID(s) of the node’s immediate parents."
    },
    "lineage": {
      "type" : "array",
      "minItems" : 1,
      "uniqueItems" : true,
      "items" : {
        "type": "string"
      },
      "description": "An array ID(s) of all node’s ancestors."
    },
    "related": {
      "type" : "array",
      "minItems" : 1,
      "uniqueItems" : true,
      "items" : {
        "type": "string"
      },
      "description": "Terms or IDs related to the node."
    }
  },
  "description": "A tree node with a linkage to immediate parent(s) and all ancestors (node's lineage)."
}
