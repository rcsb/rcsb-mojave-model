{
  "title" : "Polymer Entity Group",
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "/groups/json-schema-group_polymer_entity.json",
  "type": "object",
  "properties": {
    "rcsb_polymer_entity_group_members_rankings": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "ranking_criteria_type",
          "group_members"
        ],
        "properties": {
          "ranking_criteria_type": {
            "type": "string",
            "enum": [
              "coverage",
              "member_quality"
            ],
            "rcsb_enum_annotated": [
              {
                "value": "coverage",
                "detail": "The higher the coverage, the better"
              },
              {
                "value": "member_quality",
                "detail": "Complex quality metric. The higher, the better"
              }
            ],
            "description": "Defines ranking option applicable to group members",
            "rcsb_search_context": [
              "exact-match"
            ]
          },
          "group_members": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "member_id",
                "rank"
              ],
              "properties": {
                "member_id": {
                  "type": "string",
                  "rcsb_search_context": [
                    "exact-match"
                  ]
                },
                "rank": {
                  "type": "integer",
                  "description": "Reflects a relationship between group members such that, for any two members the first is ranked higher (smaller rank value) than the second",
                  "rcsb_search_context": [
                    "default-match"
                  ]
                },
                "original_score": {
                  "type": "number",
                  "description": "Quantifies the criteria used for ranking",
                  "rcsb_search_context": [
                    "default-match"
                  ]
                }
              },
              "additionalProperties": false
            },
            "minItems": 1,
            "uniqueItems": true
          }
        },
        "additionalProperties": false
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "rcsb_polymer_entity_group_sequence_alignment": {
      "type": "object",
      "required": [
        "abstract_reference",
        "group_members_alignment"
      ],
      "properties": {
        "abstract_reference": {
          "type": "object",
          "description": "Abstract reference where group members can be aligned to generate a MSA",
          "required": [
            "length"
          ],
          "properties": {
            "length": {
              "type": "integer",
              "description": "Abstract reference length"
            },
            "sequence": {
              "type": "string",
              "description": "Sequence that represents the abstract reference"
            }
          }
        },
        "group_members_alignment": {
          "type": "array",
          "description": "List of alignments with core_entity canonical sequences",
          "items": {
            "description": "Alignment with a core_entity canonical sequence",
            "allOf": [
              {
                "$ref": "../common/common-schema-alignment.json#/definitions/alignment"
              },
              {
                "type": "object",
                "properties": {
                  "member_id": {
                    "type": "string"
                  }
                }
              }
            ]
          }
        }
      }
    }
  }
}