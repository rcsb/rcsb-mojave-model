{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "/internal/common/common-schema-feature_positions.json",
  "type" : "object",
  "definitions": {
    "feature_positions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "beg_seq_id": {
            "type": "integer",
            "description": "An identifier for the monomer at which this segment of the feature begins."
          },
          "end_seq_id": {
            "type": "integer",
            "description": "An identifier for the monomer at which this segment of the feature ends."
          },
          "values": {
            "type": "array",
            "items": {
              "type": "number",
              "examples": [
                1.5,
                0.25
              ],
              "description": "The value(s) of the feature over the monomer segment."
            },
            "uniqueItems": false
          }
        },
        "additionalProperties": false,
        "required": [
          "beg_seq_id"
        ]
      }
    }
  }
}