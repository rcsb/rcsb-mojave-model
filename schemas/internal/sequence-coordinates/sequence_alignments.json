{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "alignment_response",
  "description": "JSON schema to to describe alignments",
  "properties": {
    "query_sequence": {
      "description": "Full sequence of the query",
      "type": "string"
    },
    "alignment_logo": {
      "type": "array",
      "items": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "symbol": {
              "type": "string"
            },
            "value": {
              "type": "integer"
            }
          }
        }
      }
    },
    "alignment_length": {
      "description": "Length of the alignment",
      "type": "integer"
    },
    "target_alignment": {
      "type": "array",
      "items": {
        "type": "object",
        "title": "target_alignment",
        "description": "JSON schema that describes the different alignments between the query sequence and targets",
        "properties": {
          "target_id": {
            "description": "Database identifier of the target",
            "type": "string"
          },
          "target_sequence": {
            "type": "string",
            "description": "Full sequence of the target"
          },
          "coverage": {
            "type": "object",
            "title": "coverage",
            "description": "Alignment scores",
            "properties": {
              "target_coverage": {
                "description": "Percentage of the target sequence covered byt the alignment",
                "type": "integer"
              },
              "query_coverage": {
                "description": "Percentage of the query sequence covered byt the alignment",
                "type": "integer"
              },
              "target_length": {
                "description": "Length of the full target sequence",
                "type": "integer"
              },
              "query_length": {
                "description": "Length of the full query sequence",
                "type": "integer"
              }
            },
            "additionalProperties": false
          },
          "aligned_regions": {
            "type": "array",
            "description": "Aligned sequence regions between query and target",
            "items": {
              "type": "object",
              "title": "aligned_region",
              "description": "Aligned region",
              "required": [
                "target_begin",
                "query_begin",
                "target_end",
                "query_end"
              ],
              "properties": {
                "target_begin": {
                  "type": "integer",
                  "description": "Target sequence start position"
                },
                "query_begin": {
                  "type": "integer",
                  "description": "Query sequence start position"
                },
                "target_end": {
                  "type": "integer",
                  "description": "Target sequence start position"
                },
                "query_end": {
                  "type": "integer",
                  "description": "Query sequence end position"
                },
                "exon_shift": {
                  "type": "array",
                  "description": "List of genomic indexes that are needed to complete the last nucleotide triad of a genome-protein sequence alignment",
                  "items": {
                    "type": "integer"
                  }
                }
              },
              "additionalProperties": false
            }
          },
          "orientation": {
            "type": "integer",
            "description": "integer that identifies the DNA strand of genome alignments (1 positive strand / -1 negative strand)"
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
